@model List<Business>;

@{
    ViewData["Title"] = "Business Directory";
}

<div class="row">
    <div class="col">
        <div class="card ml-2 mt-2">
            <h3 class="card-header bg-card-header">Business Directory</h3>
            <div class="card-body bg-light">
                <table id="businessDirectoryTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Name</td>
                            <td>Cash per second</td>
                            <td>Current Cash</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(s => s.CashPerSecond != 0))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><span class="formatted-number" data-number-to-format="@item.CashPerSecond" data-number-format-style="$0a"></span></td>
                                <td><span class="formatted-number" data-number-to-format="@item.Cash" data-number-format-style="$0a"></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#businessDirectoryTable').DataTable({
                "lengthChange": false,
                "order": [[1, "asc"]],
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                    },
                ]
            });

            $('#businessDirectoryTable tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                window.location.href = "/business/index/" + data[0];
            });
        });
    </script>
}