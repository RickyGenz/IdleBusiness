<div class="row w-100">
    <div class="col-md-4 ml-2">
        <div class="class="card ml-2 mr-2 mt-2 w-100"">
            <h3 class="card-header bg-card-header">
                Register To Play
            </h3>
            <div class="card-body bg-light">
                <p>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Create an account</a>
                </p> 
                <p>
                    <a asp-action="CreateGuestAccount" asp-controller="Home" class="btn btn-outline-primary">Continue As a Guest</a>
                </p>
                <p>
                    To start playing, you must first create an account!
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/EmployeePurchase.PNG" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 class="text-dark">Hire Employees</h2>
                    </div>
                </div>

                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/Invest.PNG" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 class="text-dark">Invest in your friends</h2>
                    </div>
                </div>

                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/Espionage.PNG" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 class="text-dark">Destroy your enemies</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>