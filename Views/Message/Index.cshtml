@model IdleBusiness.Views.Models.MessageIndexVM;

<div class="row">
    <div class="col">
        <h2>Messages</h2>
        <table id="businessDirectoryTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>From</td>
                    <td>Message</td>
                    <td>Date</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Messages)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.SendingBusiness?.Name ?? "System")</td>
                        <td>@item.MessageBody</td>
                        <td>@item.DateReceived</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#businessDirectoryTable').DataTable({
                "lengthChange": false,
                "order": [[1, "asc"]],
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                    },
                ]
            });
        });
    </script>
}